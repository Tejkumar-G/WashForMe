<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_curve</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/kalam_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BoldText">
        <item name="android:fontFamily">@font/kalam_bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="RegularText">
        <item name="android:fontFamily">@font/kalam_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="NonColoredText">
        <item name="android:fontFamily">@font/kalam_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorSecondary">#FFA726</item>
        <item name="colorSecondaryVariant">#FF6F00</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSurface">#424242</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="android:navigationBarColor">#212121</item>
        <item name="android:statusBarColor">#212121</item>
        <item name="android:windowBackground">#303030</item>
    </style>

    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">#303F9F</item>
        <item name="colorSecondary">#FFA726</item>
        <item name="colorSecondaryVariant">#FF6F00</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:windowBackground">#FFFFFF</item>
    </style>


    <style name="InputTextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/button_color</item>
        <item name="boxBackgroundColor">@color/secondary_white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintEnabled">true</item>
    </style>



</resources>