<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="category"
            type="com.example.washforme.model.Category" />
        <variable
            name="selectedColorBlack"
            type="Boolean" />

    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/light_background_blue">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="5dp">

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/categoryBackground"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:background="@{selectedColorBlack?@drawable/dark_round:@drawable/rounded_corner}"
                app:layout_constraintTop_toTopOf="@id/line"
                app:layout_constraintBottom_toBottomOf="@id/line"
                app:layout_constraintStart_toStartOf="@id/line"
                android:layout_marginStart="30dp"/>


            <TextView
                android:id="@+id/categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/line"
                app:layout_constraintBottom_toBottomOf="@id/line"
                app:layout_constraintStart_toStartOf="@id/categoryBackground"
                app:layout_constraintEnd_toEndOf="@id/categoryBackground"
                android:textColor="@{selectedColorBlack?@color/primary_white:@color/black}"
                android:fontFamily="@font/kalam_regular"
                android:text="@={category.name}" />

            <View
                android:id="@+id/categoryCountBackground"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@{selectedColorBlack?@drawable/dark_round:@drawable/rounded_corner}"
                app:layout_constraintTop_toTopOf="@id/line"
                app:layout_constraintBottom_toBottomOf="@id/line"
                app:layout_constraintEnd_toEndOf="@id/line"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/categoryCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/line"
                app:layout_constraintBottom_toBottomOf="@id/line"
                app:layout_constraintStart_toStartOf="@id/categoryCountBackground"
                app:layout_constraintEnd_toEndOf="@id/categoryCountBackground"
                android:textColor="@{selectedColorBlack?@color/primary_white:@color/black}"
                android:fontFamily="@font/kalam_regular" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/end_line"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/topLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/itemsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topLayout"
            android:layout_margin="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            tools:listitem="@layout/cart_item_detail"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>