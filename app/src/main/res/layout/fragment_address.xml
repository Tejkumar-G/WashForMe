<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.example.washforme.core.presentation.address.AddressViewModel" />

        <variable
            name="header"
            type="com.example.washforme.core.domain.model.ToolbarModel" />


        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".core.presentation.address.AddressFragment">

        <include layout="@layout/header_layout"
            android:id="@+id/topLayout"
            app:header="@{header}"/>

        <Button
            android:id="@+id/addAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_address"
            style="@style/ButtonStyle"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:onClick="@{() -> model.createAddress()}"
            app:layout_constraintTop_toBottomOf="@id/topLayout"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/addAddress"
            android:layout_marginTop="20dp"
            app:addAdapter="@{model.addressAdapter}"
            android:paddingBottom="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>



        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="@{model.isLoading() ? View.VISIBLE: View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>