<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="timeSlot"
            type="com.example.washforme.featureBooking.domain.models.Timeslot" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/outline_background">

            <CheckBox
                android:id="@+id/checkSlot"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtStartTime"
                style="@style/RegularText"
                addTextInTimeFormat="@{timeSlot.start_datetime}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/checkSlot"
                app:layout_constraintStart_toEndOf="@id/checkSlot"
                app:layout_constraintTop_toTopOf="@id/checkSlot" />

            <TextView
                android:id="@+id/txtTo"
                style="@style/RegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" to "
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/txtStartTime"
                app:layout_constraintStart_toEndOf="@id/txtStartTime"
                app:layout_constraintTop_toTopOf="@id/txtStartTime" />

            <TextView
                style="@style/RegularText"
                addTextInTimeFormat="@{timeSlot.end_datetime}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/txtTo"
                app:layout_constraintStart_toEndOf="@id/txtTo"
                app:layout_constraintTop_toTopOf="@id/txtTo" />

            <TextView
                style="@style/RegularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="Slot Full"
                android:textColor="@color/dark_background"
                android:textSize="16sp"
                android:visibility="@{true?View.GONE:View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="@id/checkSlot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/checkSlot" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</layout>